<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MovieApps" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_sea</item>
        <item name="colorPrimaryVariant">@color/blue_sea</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:tabWidgetStyle">@style/Theme.MovieApps.TabFavorite</item>
    </style>

    <style name="Theme.MovieApps.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MovieApps.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TvSynopsisTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:text">@string/synopsis</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">1</item>
    </style>

    <style name="TvSynopsis">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="Theme.MovieApps.TabFavorite">
        <item name="tabBackground">?attr/colorOnPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicator">@color/white</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="Theme.MovieApps.Fullscreen" parent="Theme.MovieApps">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="CardTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CardReleaseDateText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TvVoteAverageText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/rating</item>
    </style>

    <style name="TvTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">22sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="TvReleaseDate">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>